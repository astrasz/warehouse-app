{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}


{% block content %}
	

		{# {% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %} #}
	<div class="container" style="height: 75vh;">
		<div class="row justify-content-center align-items-center h-75">
			<div class="col col-md-6">
				<form method="post">
				{% if error %}
					<div class="alert alert-danger" style="font-size:14px">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

					<h1 class="h3 mb-4 mt-5 font-weight-normal">Please sign in</h1>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
				        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				        See https://symfony.com/doc/current/security/remember_me.html

				        <div class="checkbox mb-3">
				            <label>
				                <input type="checkbox" name="_remember_me"> Remember me
				            </label>
				        </div>
				    #}

					<button class="btn btn-lg btn-primary my-2" type="submit">
						Sign in
					</button>
				</form>
				<p class="mt-5">or create an account</p>
				<a href="{{path('app_register')}}" class="btn btn-sm mt-2" style="background-color: #d63384; color: #fff">Sign up</a>
			</div>
		</div>
	</div>
{% endblock %}
